# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://lean-php.test
APP_TIMEZONE=UTC
LOG_PATH=storage/logs/app.log

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type
CORS_MAX_AGE=600
CORS_ALLOW_CREDENTIALS=false

# JWT Authentication
# Generate secure base64url-encoded secrets for production!
# Example: openssl rand -base64 32 | tr '+/' '-_' | tr -d '='
AUTH_JWT_CURRENT_KID=main
AUTH_JWT_KEYS=main:CHANGE_ME_TO_SECURE_BASE64URL_SECRET
AUTH_TOKEN_TTL=900

# Rate Limiting
RATE_LIMIT_STORE=file
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_WINDOW=60

# Database
# SQLite (default for development)
DB_DSN=sqlite:storage/database.sqlite
DB_USER=
DB_PASSWORD=
DB_ATTR_PERSISTENT=false

# MySQL example (uncomment and configure for MySQL)
# DB_DSN=mysql:host=localhost;dbname=leanphp;charset=utf8mb4
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_ATTR_PERSISTENT=false
